<h1>Add a Pet</h1>

<%= form_for @pet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :species %>
  <%= f.select :species, Pet::SPECIES %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :found_on %>
  <%= f.date_field :found_on %>

  <%= f.submit %>
<% end %>
